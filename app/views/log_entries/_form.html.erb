<%= form_for([@wine, @log_entry]) do |f| %>
	<%= render 'shared/validation_errors', object: @log_entry %>
	<%= f.label :name %>
	<%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br />
	<%= f.label :rating %>
	<% LogEntry::RATINGS.each do |rate| %>
		<%= f.radio_button :rating, rate %> <%= rate %>
	<% end %> <br />
	<%= f.label :location %>
	<%= f.text_area :location %><br />
	<%= f.label :tasted_on %>
	<%= f.date_select :tasted_on %><br />
	<%= f.label :comment %>
  	<%= f.text_area :comments %><br/>
	<p>
		<%= f.submit %>
	</p>
<% end %>
	